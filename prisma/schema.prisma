datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

model User {
  id        String   @id @default(cuid())
  clerkUserId   String   @unique
  email String @unique
  name  String
  isPaid Boolean @default(false)
  recordCount Int @default(0)
}

model Record {
  id        String   @id @default(cuid())
  userId    String
  title     String
  audioUrl  String?
  decodedText String?
}
